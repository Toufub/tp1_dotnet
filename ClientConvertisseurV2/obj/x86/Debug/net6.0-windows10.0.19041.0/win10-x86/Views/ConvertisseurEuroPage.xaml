<Page
    x:Class="ClientConvertisseurV2.Views.ConvertisseurEuroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClientConvertisseurV1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Dark"
    >

    <RelativePanel>

        <TextBlock x:ConnectionId='2' Text="Convertisseur" 
                   Name="header" 
                   Style="{ThemeResource HeaderTextBlockStyle}" 
                   Foreground="DarkRed"
                   Margin="20"></TextBlock>

        <TextBlock x:ConnectionId='3' Text="Montant en Euros"
                   Name="montant_euros" 
                   Foreground="White" 
                   RelativePanel.AlignHorizontalCenterWithPanel="True" 
                   RelativePanel.Below="header"
                   Margin="10"
                   Width="200"></TextBlock>

        <TextBox x:ConnectionId='4' Name="input_montant_euros" 
                 RelativePanel.AlignHorizontalCenterWithPanel="True" 
                 RelativePanel.Below="montant_euros"
                 Margin="10"
                 Width="200"
                 Text="{Binding MontantEuros, Mode=TwoWay}"></TextBox>

        <TextBlock x:ConnectionId='5' Text="Devise" 
                   Name="devise" 
                   Foreground="White" 
                   RelativePanel.AlignHorizontalCenterWithPanel="True" 
                   RelativePanel.Below="input_montant_euros"
                   Margin="10"
                   Width="200"></TextBlock>

        <ComboBox x:ConnectionId='6' Name="combo_devise" 
                  RelativePanel.AlignHorizontalCenterWithPanel="True" 
                  RelativePanel.Below="devise"
                  Margin="10"
                  Width="200"
                  ItemsSource="{Binding Devises}" 
                  SelectedValuePath="Id"
                  DisplayMemberPath="NomDevise"
                  SelectedItem="{Binding DeviseSelected, Mode=TwoWay}"></ComboBox>

        <Button x:ConnectionId='7' Content="Convertir" 
                Name="btn_convertir" RelativePanel.AlignHorizontalCenterWithPanel="True" 
                RelativePanel.Below="combo_devise"
                Margin="10"
                Width="200"
                Command="{Binding BtnSetConversion}"></Button>

        <TextBlock x:ConnectionId='8' Text="Montant en devise" 
                   Name="montant_devise" 
                   Foreground="White" 
                   RelativePanel.AlignHorizontalCenterWithPanel="True" 
                   RelativePanel.Below="btn_convertir"
                   Margin="10"
                   Width="200"></TextBlock>

        <TextBox x:ConnectionId='9' Name="input_montant_devise" 
                 RelativePanel.Below="montant_devise" 
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                 Margin="10"
                 IsEnabled="False"
                 Width="200"
                 Text="{Binding MontantDevise}"></TextBox>

    </RelativePanel>
</Page>

